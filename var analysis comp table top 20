    '#2188D7',  # Lighter Blue
    '#004B7F',  # Darker Blue
    '#6A6C6E',  # Medium Grey
    '#A0A3A6',  # Light Grey
    '#FF4B4B',  # Red for negative (used for change in tables, can be for trends too)
    '#28a745',  # Green for positive (used for change in tables, can be for trends too)
]

