<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vertical Moving List</title>
    <!-- Include Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body>
    <div class="h-32 overflow-hidden relative">
        <ul id="participantList" class="list-none p-0 m-0 absolute top-0 animate-scroll">
            <!-- List items will be added dynamically here -->
        </ul>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            fetch('/participantnames')
                .then(response => response.json())
                .then(data => {
                    const participantList = document.getElementById('participantList');
                    data.forEach(name => {
                        const listItem = document.createElement('li');
                        listItem.textContent = name;
                        listItem.classList.add('py-2'); // Add Tailwind CSS class for padding
                        participantList.appendChild(listItem);
                    });
                })
                .catch(error => console.error('Error fetching participant names:', error));
        });
    </script>
</body>
</html>