<div class="scroll-container overflow-hidden h-40">
  <ul id="scrollList" class="list-none m-0 p-0">
    <!-- Your list items will be dynamically added here -->
  </ul>
</div>

<style>
  @keyframes scroll {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(-100%);
    }
  }

  .scroll-container {
    animation: scroll 20s linear infinite;
  }

  .scroll-container:hover {
    animation-play-state: paused;
  }
</style>


<script>
  // Example of dynamically adding list items
  const scrollList = document.getElementById('scrollList');
  const listItemTexts = ["Item 1", "Item 2", "Item 3", "Item 4", "Item 5"];
  
  listItemTexts.forEach(text => {
    const listItem = document.createElement('li');
    listItem.textContent = text;
    scrollList.appendChild(listItem);
  });
</script>