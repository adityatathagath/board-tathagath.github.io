<div class="bg-white p-6 rounded-lg shadow-md">
    <h3 class="font-bold text-lg text-center mb-4">Player Contribution to Total Score</h3>
    <canvas id="playerContributionChart"></canvas>
</div>


async function loadPlayerContributionChart() {
    const data = await fetchData('/api/chart-data');

    new Chart(document.getElementById('playerContributionChart'), {
        type: 'pie',
        data: {
            labels: data.player_names, // Player names
            datasets: [{
                label: 'Contribution (%)',
                data: data.player_contributions, // Player contributions as percentages
                backgroundColor: ['#00aeef', '#00395d', '#ffa500', '#6a1b9a', '#4caf50'], // Custom colors
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                }
            }
        }
    });
}