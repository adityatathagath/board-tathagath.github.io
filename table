<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <title>Leaderboard</title>
</head>
<body class="bg-gray-100 dark:bg-gray-800">
    <div class="container mx-auto p-4">
        <!-- Search Bar -->
        <div class="mb-4">
            <input
                type="text"
                id="searchInput"
                placeholder="Search by name..."
                class="w-full px-4 py-2 text-sm text-gray-800 dark:text-white border rounded-md focus:outline-none focus:ring focus:border-blue-300"
            />
        </div>

        <table class="w-full text-left table-auto min-w-max bg-white dark:bg-gray-700 rounded-lg shadow-md">
            <thead>
                <tr>
                    <th class="p-4">Rank</th>
                    <th class="p-4">Name</th>
                    <th class="p-4">Score</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example rows with trophy icons -->
                <tr>
                    <td class="p-4">
                        <i class="fas fa-trophy text-yellow-500 mr-2"></i>1
                    </td>
                    <td class="p-4">John Doe</td>
                    <td class="p-4">1500</td>
                </tr>
                <!-- Repeat for 2nd and 3rd positions -->
                <!-- ... -->
                <!-- Remaining rows -->
            </tbody>
        </table>
    </div>

    <script>
        const searchInput = document.getElementById('searchInput');
        const leaderboardTable = document.querySelector('table');

        searchInput.addEventListener('input', () => {
            const query = searchInput.value.toLowerCase();
            const rows = leaderboardTable.getElementsByTagName('tr');

            for (const row of rows) {
                const nameCell = row.querySelector('td:nth-child(2)');
                if (nameCell) {
                    const name = nameCell.textContent.toLowerCase();
                    row.style.display = name.includes(query) ? 'table-row' : 'none';
                }
            }
        });
    </script>
</body>
</html>
